package numericalData;

public class CylinderComputation {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
        double radius, height, surfaceArea, baseArea, volume;
        final double PI = 3.14159265; 
        		
        radius = 3.7;
        height = 12.5;
        surfaceArea = 2 * PI * radius * height;
        baseArea = PI * 2 * radius;
        volume = PI * 2 * radius * height;
        
        System.out.print("The surfaceArea is ");
        System.out.printf("%.2f", surfaceArea);
        System.out.println();
        System.out.print("The baseArea is ");
        System.out.printf("%.2f", baseArea);
        System.out.println();
        System.out.print("The volume is ");
        System.out.printf("%.2f", volume);
        System.out.println(); 
	}

}
